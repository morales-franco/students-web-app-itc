@model Students.WebApp.Features.Accounts.ViewModels.LoginModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        Students App
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">Login</p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend></legend>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => Model.UserName, new { @placeholder = "User", @class = "form-control" })
                    <span class="fa fa-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => Model.Password, new { @placeholder = "Password", @class = "form-control" })
                    <span class="fa fa-lock form-control-feedback"></span>
                </div>
                <div class="body">
                    <div class="footer">
                        <button type="submit" id="login" class="btn btn-primary btn-block btn-flat">Login</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery.unobtrusive-ajax.js"></script>
    <script src="~/lib/jquery.validate.js"></script>
    <script src="~/lib/jquery.validate.unobtrusive.js"></script>
}
