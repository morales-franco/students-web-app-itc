@model Students.WebApp.ViewModels.Student.StudentCreateModel

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="box">
		<div class="box-body">
			@Html.ValidationSummary(true)
			<div class="col-md-6 form-group">
				@Html.LabelFor(model=> model.Nombre)
				@Html.TextBoxFor(model => model.Nombre, null, new {@class="form-control"})<br />
				@Html.ValidationMessageFor(model => model.Nombre)
			</div>
			<div class="col-md-6 form-group">
				@Html.LabelFor(model=> model.Apellido)
				@Html.TextBoxFor(model => model.Apellido, null, new {@class="form-control"})<br />
				@Html.ValidationMessageFor(model => model.Apellido)
			</div>
			<div class="col-md-6 form-group">
				@Html.LabelFor(model=> model.FechaNacimiento)
				@Html.TextBoxFor(model => model.FechaNacimiento, null, new {@class="form-control", @type="date"})<br />
				@Html.ValidationMessageFor(model => model.FechaNacimiento)
			</div>
		</div>
		<div class="box-footer">
			@Html.ActionLink("Cancelar", "Index", null, null, new { @class = "btn btn-default btn-flat pull-right" })
			<button type="submit" class="btn btn-info btn-flat pull-right">Aceptar</button>
		</div>
	</div>
}

@section Scripts {
	<script src="~/lib/jquery.unobtrusive-ajax.js"></script>
	<script src="~/lib/jquery.validate.js"></script>
	<script src="~/lib/jquery.validate.unobtrusive.js"></script>
}
